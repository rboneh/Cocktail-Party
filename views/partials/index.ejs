<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Cocktails Party</title>

  <!-- bootsdtrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

  <!-- Loading fonts from google  -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100&display=swap" rel="stylesheet" />

  <!-- site styiling -->
  <link rel="stylesheet" href="styles/main.css" />

</head>

<body class="text-bg-dark">

  <!-- Carousel -->

  <div class="container text-center container-top">

    <div class="container container-carousel">

      <h1 class="class=mb-4 mt-2">Cocktail Party</h1>

      <form id="shakeItForm" action="/get-random" method="GET">
        <button class="btn btn-danger mb-4" type="submit" aria-current="page">
          Shake Me
        </button>
      </form>

      <!-- <button id="shakeIt" type="submit" class="btn btn-light mb-4">Shake It</button> -->

      <div id="carousel" class="carousel slide text-bg-dark">

        <!-- Indicators/dots -->
        <div class="carousel-indicators d-flex  mb-1  mx-auto">
          <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
          <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
          <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
        </div>

        <!-- The slideshow/carousel -->
        <div class="carousel-inner">

          <%- carouselBody %>

        </div>

        <!-- Left and right controls/icons -->
        <button class=carousel-control-prev type=button data-bs-target="#carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>

    </div>

  </div>

  <!-- loading scripts for jquery and bootstrap  -->
  <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>


</body>

</html>